<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88323232"
    android:orientation="vertical" >

    <ImageView 
        android:id="@+id/sliding_app_icon"
        android:contentDescription="@string/app_name"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/icon_large"/>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />
    
    <LinearLayout
        android:id="@+id/sliding_open"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/sliding_open_image"
            android:contentDescription="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="60dip"
            android:src="@drawable/ic_menu_archive" />

        <TextView
            android:id="@+id/sliding_open_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/slidingmenu_open"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:id="@+id/sliding_loop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/sliding_loop_image"
            android:contentDescription="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="60dip"
            android:scaleType="center"
            android:src="@drawable/ic_mp_repeat_off_btn" />

        <TextView
            android:id="@+id/sliding_loop_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/slidingmenu_repeat"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:id="@+id/sliding_floatwindow"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/sliding_checkbox_floatwindow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >
        </CheckBox>

        <TextView
            android:id="@+id/sliding_floatwindow_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/slidingmenu_float_window"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:id="@+id/sliding_about"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/sliding_about_image"
            android:contentDescription="@string/app_name"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:maxHeight="50dip"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:src="@drawable/about" />

        <TextView
            android:id="@+id/sliding_about_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/slidingmenu_about"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

</LinearLayout>